apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: ${cluster_issuer_name}
spec:
  acme:
    server: https://acme-v02.api.letsencrypt.org/directory
    email: ${letsencrypt_email}
    privateKeySecretRef:
      name: ${cluster_issuer_name}-account-key
    solvers:
    - dns01:
        cloudflare:
          apiTokenSecretRef:
            name: ${cloudflare_secret_name}
            key: api-token
