global:
  tlsDisable: false
  namespace: ${namespace}

injector:
  enabled: false

ui:
  enabled: true

server:
  dataStorage:
    enabled: false
  ha:
    enabled: true
    replicas: 1
    raft:
      enabled: true
      config: |
        ui = true
        listener "tcp" {
          tls_disable = false
          address     = "[::]:8200"
          cluster_address = "[::]:8201"
          tls_cert_file = "/vault/userconfig/vault-ha-tls/tls.crt"
          tls_key_file  = "/vault/userconfig/vault-ha-tls/tls.key"
        }
        storage "raft" {
          path = "/vault/data"
        }
        # disable_mlock = true # already enabled by default
        service_registration "kubernetes" {}
  extraEnvironmentVars:
    VAULT_TLSCERT: "/vault/userconfig/vault-ha-tls/tls.crt"
    VAULT_TLSKEY: "/vault/userconfig/vault-ha-tls/tls.key"
    VAULT_ADDR: https://${subdomain}.${domain}:8200
  volumes:
    - name: vault-data
      persistentVolumeClaim:
        claimName: ${pvc_name}
    - name: userconfig-vault-ha-tls
      secret:
        defaultMode: 420
        secretName: ${secret_name}
  volumeMounts:
    - name: vault-data
      mountPath: /vault/data
    - name: userconfig-vault-ha-tls
      mountPath: /vault/userconfig/vault-ha-tls
      readOnly: true
  hostAliases:
    - ip: 127.0.0.1
      hostnames:
        - ${subdomain}.${domain}
  ingress:
    enabled: false