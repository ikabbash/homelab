apiVersion: "cilium.io/v2alpha1"
kind: CiliumL2AnnouncementPolicy
metadata:
  name: ${policy_name}
spec:
  externalIPs: true
  loadBalancerIPs: true
  interfaces:
    - '^(eth0|ens.*|enp[0-9s]+)$'
  serviceSelector:
    matchExpressions:
      - key: gateway.networking.k8s.io/gateway-name
        operator: In
        values:
          - ${gateway_name}
      - key: app.kubernetes.io/name
        operator: In
        values:
          - nginx-ingress