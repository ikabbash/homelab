apiVersion: "cilium.io/v2alpha1"
kind: CiliumL2AnnouncementPolicy
metadata:
  name: ${policy_name}
spec:
  externalIPs: true
  loadBalancerIPs: true
  interfaces:
    - '^(eth0|ens.*|enp[0-9s]+)$'
  serviceSelector:
    matchLabels:
      io.kubernetes.service.namespace: ${gateway_namespace}
      io.kubernetes.service.name: cilium-gateway-${gateway_name}