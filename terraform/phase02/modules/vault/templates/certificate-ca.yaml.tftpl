apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: vault-ca
  namespace: ${vault_namespace}
spec:
  isCA: true
  commonName: vault-ca
  secretName: ${secret_name}
  privateKey:
    algorithm: ECDSA
    size: 256
  issuerRef:
    name: ${issuer_name}
    kind: Issuer
    group: cert-manager.io