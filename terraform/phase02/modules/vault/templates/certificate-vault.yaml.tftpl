apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: vault-certificate
  namespace: ${vault_namespace}
spec:
  dnsNames:
    - vault
    - vault.${vault_namespace}
    - vault.${vault_namespace}.svc
    - vault.${vault_namespace}.svc.cluster.local
    - ${vault_host}
  ipAddresses:
    - 127.0.0.1
  secretName: ${secret_name}
  issuerRef:
    name: ${issuer_name}
    kind: Issuer
  usages:
    - digital signature
    - key encipherment
