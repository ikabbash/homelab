apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: ${vault_certificate_name}
  namespace: ${vault_namespace}
spec:
  dnsNames:
    - ${vault_address}
  secretName: ${vault_certificate_name}
  issuerRef:
    name: ${cluster_issuer_name}
    kind: ClusterIssuer
  usages:
    - digital signature
    - key encipherment
